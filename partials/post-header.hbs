<header class="post-header">
    <h1 class="post-title"><a href="{{url}}">{{{title}}}</a></h1>
    <section class="post-info">
        <i class="fa fa-pencil"></i>
            <time class="post-time" datetime="{{date format='YYYY-MM-DD'}}">{{date format='MMM DD, YYYY'}}</time> 
            <span class="post-tags">{{tags prefix="on "}}</span>
    </section>
</header>