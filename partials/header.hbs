<header class="blog-header">
    <div class="wrapper">
        {{#if @blog.logo}}<a class="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{{@blog.title}}}" /></a>{{/if}}
        <h1 class="blog-title"><a title="{{@blog.title}}" href="{{@blog.url}}">{{{@blog.title}}}</a></h1>
        <p class="blog-description">{{@blog.description}}</p>
    </div>
    <nav class="blog-navigation" id="blog-navigation">
        <div class="wrapper">
            <span class="blog-menu">
                <a href="{{@blog.url}}"><i class="fa fa-fw fa-home"></i>Home</a>
            </span>
            <span class="blog-navigation-hidetop">
                <i class="fa fa-fw fa-heart"></i>{{@blog.title}}
            </span>
        </div>
    </nav>
</header>