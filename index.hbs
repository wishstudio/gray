{{!< default}}
<main class="blog-main" role="main">
    <div class="wrapper">
        {{#foreach posts}}
        <article role="article" class="{{post_class}}">
            <header class="post-header">
                <h1 class="post-title"><a href="{{url}}">{{{title}}}</a></h1>
                <section class="post-info">
                    <i class="fa fa-pencil"></i>
                    <time class="post-time" datetime="{{date format='YYYY-MM-DD'}}">{{date format='MMM DD, YYYY'}}</time> 
                    <span class="post-tags">{{tags prefix="on "}}</span>
                </section>
            </header>

            <section class="post-excerpt">
                <p>{{excerpt}}...</p>
            </section>

            <a href="{{url}}">READ MORE</a>
            <hr />
        </article>
        {{/foreach}}

        {{{pagination}}}
    </div>
</main>
